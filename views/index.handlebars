<div class="container py-5">
    <h1 class="text-center mb-5" style="color: white">你想對誰說幹話?</h1>
      <form method="POST" action="/">
      <div class="row justify-content-between">
          <div class="card col-3" style="width: 18rem;">
             <div class="card-image">
                <img for="engineer" src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg" alt="engineer" class="card-img-top" style="width: 100%; height: 15vw; object-fit: cover;">
             </div>
             <div class="card-body d-flex justify-content-center align-items-center">
               <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="engineer" value="engineer" name="role" {{#if (eq options 'engineer')}} checked {{/if}}>
                  <label class="custom-control-label" for="engineer">工程師</label> 
               </div>
             </div>
          </div>

          <div class="card col-3" style="width: 18rem;">
            <div class="img-box">
              <img for="designer" src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg" alt="designer" class="card-img-top" style="width: 100%; height: 15vw; object-fit: cover;">
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
              <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="designer" value="designer" name="role" {{#if (eq options 'designer')}} checked {{/if}}>
                  <label class="custom-control-label" for="designer">設計師</label> 
              </div>
            </div>
          </div>

          <div class="card col-3" style="width: 18rem;">
            <div class="img-box">
              <img for="entrepreneur" src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg" alt="entrepreneur" class="card-img-top" style="width: 100%; height: 15vw; object-fit: cover;">
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
              <div class="custom-control custom-radio">
                  <input type="radio" class="custom-control-input" id="entrepreneur" value="entrepreneur" name="role" {{#if (eq options 'entrepreneur')}} checked {{/if}}>
                  <label class="custom-control-label" for="entrepreneur">創業家</label> 
              </div>
            </div>
          </div>

        </div>
        <div class="generator row justify-content-center mt-4">
            <div><button type="submit" class="btn btn-info mt-2 mr-4">產生幹話</button></div>
            <div class="alert alert-info text-center col mt-2 py-4" role="alert">
              {{#if talkRubbish}}
              <span>{{talkRubbish}}</span>
              {{/if}}
            </div>
        </div>
      </form>
  </div>
</div>